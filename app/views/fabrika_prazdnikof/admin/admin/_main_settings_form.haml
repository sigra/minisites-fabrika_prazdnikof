%h3 Основные настройки сайта
= form_for 'settings', url: admin_settings_path do |f|
  %table.table.table-bordered
    %tr
      %td Телефон (в самолёте)
      %td
        .form-group= f.text_field :phone, value: settings['phone'], class: 'form-control'
    %tr
      %td О нас (1й блок)
      %td
        .form-group= f.text_area :about1, value: settings["about1"], class: 'form-control textarea', rows: 10
    %tr
      %td О нас (2й блок)
      %td
        .form-group= f.text_area :about2, value: settings["about2"], class: 'form-control textarea', rows: 10
    %tr
      %td О нас (3й блок)
      %td
        .form-group= f.text_area :about3, value: settings["about3"], class: 'form-control textarea', rows: 10
    %tr
      %td О нас (4й блок)
      %td
        .form-group= f.text_area :about4, value: settings["about4"], class: 'form-control textarea', rows: 10
    %tr
      %td Спец. предложение
      %td
        .form-group= f.text_area :special, value: settings["special"], class: 'form-control textarea', rows: 10
    %tr
      %td Адрес (1я строка)
      %td
        .form-group= f.text_field :address1, value: settings['address1'], class: 'form-control'
    %tr
      %td Адрес (2я строка)
      %td
        .form-group= f.text_field :address2, value: settings['address2'], class: 'form-control'
    %tr
      %td Название организации
      %td
        .form-group= f.text_field :company, value: settings['company'], class: 'form-control'
  .col-lg-2
    .form-group= submit_tag 'Обновить основную информацию', class: 'btn btn-primary'